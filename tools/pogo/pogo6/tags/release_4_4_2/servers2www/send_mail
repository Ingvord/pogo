#MAIL_LIST=verdier@esrf.fr
MAIL_LIST=tango@esrf.fr
FILE_NAME=$1
TITLE='New Tango Device Server Classes'

#---------------------------------------------------------
#	check if file exists
#---------------------------------------------------------
ls $FILE_NAME
RETVAL=$?
export RETVAL

if [ $RETVAL = 0 ]
then
	echo "/usr/bin/mailx -s  "$TITLE"  $MAIL_LIST < $FILE_NAME"
	/usr/bin/mailx -s  "$TITLE"  $MAIL_LIST < $FILE_NAME

	rm $FILE_NAME
fi
